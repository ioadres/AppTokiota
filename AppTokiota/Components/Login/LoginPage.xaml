<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" prism:ViewModelLocator.AutowireViewModel="True" x:Class="AppTokiota.Components.Login.LoginPage" Title="{Binding Title}">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="login_background.png" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0" AbsoluteLayout.LayoutFlags="All" />
            <Grid RowSpacing="0" ColumnSpacing="0" AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0" AbsoluteLayout.LayoutFlags="All">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Frame CornerRadius="4"  
                       Padding="20"
                       Grid.Row="0" Grid.Column="0"  
                       Grid.ColumnSpan="2" 
                       Opacity="0.8"
                       VerticalOptions="CenterAndExpand" 
                       HorizontalOptions="CenterAndExpand">
                    <StackLayout VerticalOptions="FillAndExpand">
                     <Image Source="logo.png" WidthRequest="117" HeightRequest="117"/>
                    </StackLayout>
                </Frame>
                
                <StackLayout Grid.Row="1" Grid.Column="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Button Text="Enter" Style="{StaticResource buttonWizardPrimary}" />
                </StackLayout>
                
                <StackLayout Grid.Row="1" Grid.Column="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                    <Button Text="About Us" Style="{StaticResource buttonWizardSecundary}" Command="{Binding OpenCompanyURICommand}" />
                </StackLayout>
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>