<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" xmlns:ctrls="clr-namespace:AppTokiota.Controls;assembly=AppTokiota" prism:ViewModelLocator.AutowireViewModel="True" x:Class="AppTokiota.Components.Login.LoginPage" Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderTextStyle" TargetType="Label" BasedOn="{StaticResource PoppinsRegularLabelStyle}">
                <Setter Property="TextColor" Value="{StaticResource WhiteColor}" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="FontSize" Value="{StaticResource LargeSize}" />
                <Setter Property="Margin">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="Android" Value="5, 0, 0, 0" />
                            <On Platform="iOS" Value="0, 8, 0, 0" />
                        </OnPlatform>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BoxLogoStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="1" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                 <Setter Property="VerticalOptions" Value="EndAndExpand" />
                 <Setter Property="Opacity" Value="0.9" />
                <Setter Property="Padding" Value="15" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="login_background.png" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0" AbsoluteLayout.LayoutFlags="All" />
            <Grid RowSpacing="0" ColumnSpacing="0" AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0" AbsoluteLayout.LayoutFlags="All">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="FillAndExpand">
                    <Frame Style="{StaticResource BoxLogoStyle}">
                        <StackLayout VerticalOptions="FillAndExpand">
                            <Image Source="logo.png" WidthRequest="100" HeightRequest="100" />
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Text="Email" TextColor="{Binding Path=LineColorToApply, Source={x:Reference EmailEntry}}" Style="{StaticResource HeaderTextStyle}">
                </Label>

                <ctrls:ExtendedEntry x:Name="EmailEntry" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" IsPassword="False" Placeholder="Email@Domain.com" AutomationId="Email" Text="{Binding Password.Value, Mode=TwoWay}"
                    IsValid="{Binding Password.IsValid, Mode=TwoWay}">
                </ctrls:ExtendedEntry>

                <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Text="Password" TextColor="{Binding Path=LineColorToApply, Source={x:Reference PasswordEntry}}" Style="{StaticResource HeaderTextStyle}">
                </Label>

                <ctrls:ExtendedEntry Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" x:Name="PasswordEntry" AutomationId="password" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" IsPassword="true" Placeholder="**********************" 
                    IsValid="{Binding Password.IsValid, Mode=TwoWay}">
                </ctrls:ExtendedEntry>

                <StackLayout Grid.Row="6" Grid.Column="0" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Padding="30">
                    <Button Text="Enter" Style="{StaticResource buttonWizardPrimary}" />
                </StackLayout>

                <StackLayout Grid.Row="6" Grid.Column="1" VerticalOptions="EndAndExpand" HorizontalOptions="Center" Padding="30">
                    <Button Text="About Us" Style="{StaticResource buttonWizardSecundary}" Command="{Binding OpenCompanyURICommand}" />
                </StackLayout>
                
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>